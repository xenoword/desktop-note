<Window x:Class="Note_desktop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Note_desktop.View"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="30" MaxHeight="820" Width="310" ResizeMode="NoResize" ShowInTaskbar="False" ShowActivated="True" WindowStyle="None" AllowsTransparency="True" Topmost="True" WindowStartupLocation="Manual" Left="10" Top="10" Background="Transparent" SizeToContent="Height" x:Name="this">
    <Border CornerRadius="10" Background="{StaticResource Secondary}" BorderThickness="10" BorderBrush="{StaticResource Primary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Style="{DynamicResource RoundButton}" Content="x" Grid.RowSpan="1" HorizontalAlignment="Right" Margin="0,0,20,0" Command="{Binding BtnClose}" CommandParameter="{Binding ElementName=this}" />
            <Button Style="{DynamicResource RoundButton}" Content="+" Grid.RowSpan="1" HorizontalAlignment="Left" Margin="20,0,0,0" Command="{Binding BtnAdd}" />
            <Button Style="{DynamicResource RoundButton}" Content="-" Grid.RowSpan="1" HorizontalAlignment="Right" Margin="0,0,45,0" Command="{Binding BtnToggleReduce}" />

            <ListView Grid.Row="2" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Hidden" BorderThickness="0" ItemsSource="{Binding NoteList, Mode=TwoWay}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:NoteView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListView>


        </Grid>
    </Border>
</Window>
