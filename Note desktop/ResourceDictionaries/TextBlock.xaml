<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Note_desktop.ResourceDictionaries">
    <Style TargetType="{x:Type TextBlock}" x:Key="TitleTextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="HelpTextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="DemiBold"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,25,0,5"/>
    </Style>
</ResourceDictionary>