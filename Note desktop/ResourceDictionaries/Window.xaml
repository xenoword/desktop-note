<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Note_desktop.ResourceDictionaries">
    <Style TargetType="{x:Type Window}" x:Key="RoundedWindow">
        <Setter Property="MinHeight" Value="50"/>
        <Setter Property="MaxHeight" Value="820"/>
        <Setter Property="MinWidth" Value="310"/>
        <Setter Property="Width" Value="310"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
        <Setter Property="ShowActivated" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Topmost" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="SizeToContent" Value="Height"/>
        <!--<Setter Property="Top" Value="10"/>
        <Setter Property="Left" Value="10"/>-->
        <Setter Property="ResizeMode" Value="CanResize"/>
    </Style>
    
    

</ResourceDictionary>